{
  "name": "vote",
  "version": "1.3.6-rc",
  "description": "Vote and Random software",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build-win": "electron-builder --win --x64 --ia32 --publish never"
  },
  "keywords": [
    "vote",
    "random",
    "class"
  ],
  "author": "Jeongwan Bae",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^5.3.0",
    "bootstrap-icons": "^1.10.5",
    "electron-progressbar": "^2.1.0",
    "electron-updater": "^6.1.1",
    "express": "^4.18.2",
    "sweetalert2": "^11.7.12"
  },
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "electron-reloader": "^1.2.3"
  },
  "build": {
    "appId": "com.baejeongwan.voteandrandom",
    "productName": "투표및 뽑기 프로그램",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "artifactName": "vote-setup-${version}.${ext}",
      "license": "build/license.html"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/baejeongwan/vote"
  }
}
